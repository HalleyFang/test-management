<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testmanage.mapper.TaskMapper">

    <sql id="table">tasks</sql>
    <insert id="addTask">
        insert into
        <include refid="table"></include>
        (id,label,status,executor,start_date,end_date,create_user,create_time,is_v)
        values
        (#{id},#{label},#{status},#{executor},#{start_date,jdbcType=DATE},
        #{end_date,jdbcType=DATE},#{create_user},#{create_time,jdbcType=TIMESTAMP},#{is_v})
    </insert>
    <update id="updateTaskById">
        update
        <include refid="table"/>
        set
        <if test="label != null and label != ''">
            label=#{label},
        </if>
        <if test="status != null and status != ''">
            status=#{status},
        </if>
        <if test="executor != null and executor != ''">
            executor=#{executor},
        </if>
        <if test="start_date != null and start_date != ''">
            start_date=#{start_date},
        </if>
        <if test="end_date != null and end_date != ''">
            end_date=#{end_date},
        </if>
        update_user=#{update_user},update_time=#{update_time,jdbcType=TIMESTAMP}
        where
        id=#{id}
    </update>
    <delete id="deleteTaskById">
        delete from
        <include refid="table"></include>
        where
        id=#{id}
    </delete>
    <select id="findAllTask" resultType="com.testmanage.entity.Task">
        select * from
        <include refid="table"></include>
    </select>
    <select id="findTaskById" resultType="com.testmanage.entity.Task">
        select * from
        <include refid="table"></include>
        where
        id=#{id}
    </select>
    <select id="findTaskByLabel" resultType="com.testmanage.entity.Task">
        select * from
        <include refid="table"></include>
        where
        label=#{label}
    </select>


</mapper>