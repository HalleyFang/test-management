<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testmanage.mapper.CaseTreeMapper">

    <sql id="table">case_tree_node</sql>
    <insert id="addTree">
        insert into
        <include refid="table"></include>
        values
        (#{id},#{label},#{case_id},#{is_dir},#{parent_id},#{post_id},#{is_delete},#{create_user},
        #{create_time,jdbcType=TIMESTAMP},null,null,#{status},#{is_v})
    </insert>
    <update id="updateTree">
        update
        <include refid="table"></include>
        set
        <if test="label != null and label != ''">
            label=#{label},
        </if>
        <if test="parent_id != null and parent_id != ''">
            parent_id=#{parent_id},
        </if>
        <if test="post_id != null and post_id != ''">
            post_id=#{post_id},
        </if>
        <if test="is_delete != null and is_delete != ''">
            is_delete=#{is_delete},
        </if>
        update_user=#{update_user},update_time=#{update_time,jdbcType=TIMESTAMP}
        where
        id=#{id}
    </update>
    <select id="findTree" resultType="com.testmanage.entity.CaseTreeNode">
        select * from
        <include refid="table"></include>
        where
        is_v=#{is_v}
    </select>
    <select id="findTreeByParent" resultType="com.testmanage.entity.CaseTreeNode">
        select * from
        <include refid="table"></include>
        where
        parent_id=#{parent_id} and is_v=#{is_v}
    </select>
    <select id="findTreeById" resultType="com.testmanage.entity.CaseTreeNode">
        select * from
        <include refid="table"></include>
        where
        id=#{id}
    </select>


</mapper>